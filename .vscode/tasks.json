{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-g",
                "serverMain.c",
                "udpListener.c",
                "coapMessage.c",
                "-o",
                "coap-server"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-g",
                "clientMain.c",
                "udpSender.c",
                "coapMessage.c",
                "-o",
                "coap-client"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}